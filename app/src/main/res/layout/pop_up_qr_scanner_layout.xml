<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_all_cornered_transparent_bg_design"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0303A6">

            <TextView
                android:id="@+id/tvAlertHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Alert"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/galleryQrPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/torchQrPopup"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/m_gallery"
                    android:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/torchQrPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/switchCameraQrPopup"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_flash_on"
                    android:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/switchCameraQrPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/close_pop"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_switch_camera"
                    android:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/close_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_close"
                    android:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0.1dp"
            android:layout_marginRight="0.1dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="290dp"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/colorblueone"
                android:orientation="vertical">

                <SurfaceView
                    android:id="@+id/cameraView"
                    android:layout_width="280dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/layoutBlinkingQRcode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/colorredtwo"
                    android:orientation="horizontal" />
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvMsgCancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_all_cornered_transparent_bg_design"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
