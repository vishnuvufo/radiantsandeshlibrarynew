                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seal_tag_no"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:id="@+id/txt_5"
                    />
                <EditText
                    android:id="@+id/rec_no_txt"
                    style="@style/receive_payment_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
                    android:hint="@string/seal_tag_no"
                    android:inputType="text"
                    android:textColor="@color/edittext_color" />

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/space"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Client/Point Code"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />
                <EditText
                    android:id="@+id/edt_spin"
                    style="@style/receive_payment_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".47"
                    android:enabled="false"
                    android:hint="Client Code - Point Code"
                    android:textColor="@color/edittext_color" />

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/space"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lin_deno"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/dono_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="@string/denomination_amount"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_2000"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="2000"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_1000"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/thousand"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_500"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/five_hund"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_200"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="200"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_100"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/hund"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_50"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/fifty"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_20"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/twenty"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_10"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/ten"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_5"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/five"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coins"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/deno_coins"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/coins"
                        android:inputType="number"
                        android:textColor="@color/edittext_color" />

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    ><TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difference Amt."
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />

                    <EditText
                        android:id="@+id/diff_amount_txt"
                        style="@style/receive_payment_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        android:hint="@string/diff_amount"
                        android:enabled="false"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/diff_amount_txt_star"
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="@string/star"
                        android:textColor="#FF0000"
                        android:visibility="invisible"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/lin_dep"
                >

                <Spinner
                    android:id="@+id/dep_type_spin"
                    style="@style/receive_payment_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/edittext_color" />

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:text="@string/space"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lin_bank"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/bank_name_spin"
                            style="@style/receive_payment_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/edittext_color" />

                        <TextView
                            style="?android:attr/textAppearanceLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="9"
                            android:gravity="center"
                            android:text="@string/space"
                            android:textColor="#FF0000"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Acc No:"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            />
                        <Spinner
