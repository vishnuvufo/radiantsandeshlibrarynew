                            android:layout_height="wrap_content"
                            android:text="Deposit Branch "
                            android:layout_weight="1"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/branch_name_edt"
                            style="@style/receive_payment_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55"
                            android:textColor="@color/edittext_color"
                            android:hint="Deposit Branch Name"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            />

                        <TextView
                            style="?android:attr/textAppearanceLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.4"
                            android:gravity="center"
                            android:text="@string/space"
                            android:textColor="#FF0000"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank Dep. Slip No."
                            android:layout_weight="1"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/bank_dep_slip_txt"
                            style="@style/receive_payment_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55"
                            android:textColor="@color/edittext_color"
                            android:hint="@string/bank_dep_slip"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            />

                        <TextView
                            style="?android:attr/textAppearanceLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.4"
                            android:gravity="center"
                            android:text="@string/space"
                            android:textColor="#FF0000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/lin_vault"
                android:visibility="gone"
                >

                <Spinner
                    android:id="@+id/vault_name_spin"
                    style="@style/receive_payment_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/edittext_color" />

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:text="@string/space"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deposit_amount"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />
                <EditText
                    android:id="@+id/dep_amount_txt"
                    style="@style/receive_payment_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
