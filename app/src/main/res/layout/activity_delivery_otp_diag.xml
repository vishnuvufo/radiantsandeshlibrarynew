<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83E9EAF4"
    android:orientation="vertical"
    tools:context=".Delhivery_Pay.DeliveryOtpVerify">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ln_deposit_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/postDetailsTopLayout"
            android:layout_alignParentTop="true"
            android:background="@color/colorblueone"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/back"
                android:src="@drawable/ic_back"
                android:tint="@color/white"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingRight="20dp"
                android:text="Delhivery"
                android:fontFamily="sans-serif" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/center_back"
                android:src="@drawable/man"
                android:tint="@color/white"
                />
        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln_latlong"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="#83E9EAF4"
        android:gravity="center">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ln_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qr_scan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/montserratregular"
                            android:gravity="center"
                            android:text="OTP Verify"
                            android:textColor="@color/colorblueone"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_grey_square"
                    tools:ignore="UselessParent">

                    <EditText
                        android:id="@+id/employeeid_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5sp"
                        android:layout_marginLeft="5sp"
                        android:backgroundTint="@color/white"
                        android:hint="Enter OTP"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="Autofill"
                        tools:targetApi="lollipop" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="11dp"
                    tools:ignore="UselessParent">


                    <LinearLayout
                        android:id="@+id/ln_submitt"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|end"
                        android:background="@drawable/border_blue"
                        android:gravity="end|right"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/tv_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_resendd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Resend"
                        android:textAllCaps="false"
                        android:textColor="@color/colorblueone"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</LinearLayout>



